<Page x:Class="BarMarket.Views.WriteOffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="WriteOffPage">
    <StackPanel Margin="20">
        <TextBlock Text="Списание товара" FontSize="20" FontWeight="Bold" Margin="0,5,0,0" />

        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="ID товара:" Width="100" />
            <TextBox x:Name="TbBeverageId" Width="200" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="Количество:" Width="100" />
            <TextBox x:Name="TbQuantity" Width="200" />
        </StackPanel>

        <Button Content="Списать" Width="100" HorizontalAlignment="Center" Margin="0,10,0,10" Click="WriteOff" />
        <Button Content="Отмена" Width="100" HorizontalAlignment="Center" Margin="0,0,0,10" Click="Cancel" />
    </StackPanel>
</Page>